{
	"add-field-type": [
        {
            "name":"basicTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name":"longTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.EnglishPossessiveFilterFactory"}
                ]
            }
        },
        {
            "name":"floatValue",
            "class":"solr.FloatPointField"
        }
    ],
    "add-field": [
        {
            "name": "cause_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "location_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "description",
            "type": "longTextField",
            "indexed": true
        },
        {
            "name": "val",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        },
        {
            "name": "lower",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        },
        {
            "name": "upper",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        }
    ]
}
