{
	"add-field-type": [
        {
            "name":"basicTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name":"longTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.SnowballPorterFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.StopFilterFactory", "words":"stopwords.txt", "ignoreCase": true},
                    {"class":"solr.SynonymGraphFilterFactory", "synonyms":"synonyms.txt", "ignoreCase": true, "expand": true},
                    {"class":"solr.SnowballPorterFilterFactory"}
                ]
            }
        },
        {
            "name": "floatValue",
            "class": "solr.FloatPointField"
        },
        {
            "name": "intValue",
            "class": "solr.IntPointField"
        }
    ],
    "add-field": [
        {
            "name": "cause_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "location_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "measure_name",
            "type": "basicTextField",
            "indexed": false
        },
        {
            "name": "sex_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "age_name",
            "type": "basicTextField",
            "indexed": true
        },
        {
            "name": "metric_name",
            "type": "basicTextField",
            "indexed": false
        },
        {
            "name": "year",
            "type": "intValue",
            "indexed": true
        },
        {
            "name": "description",
            "type": "longTextField",
            "indexed": true
        },
        {
            "name": "val",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        },
        {
            "name": "lower",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        },
        {
            "name": "upper",
            "type": "floatValue",
            "indexed": true,
            "docValues": true
        }
    ]
}
